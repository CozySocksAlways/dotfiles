[alias]
	add-commit = !git add -A && git commit
[merge]
  tool = nvimdiff
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"

[log]
	decorate=auto
	abbrevCommit=true

[format]
	pretty=oneline
