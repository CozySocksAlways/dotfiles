	email = ha.jos@fz-juelich.de

[alias]
	add-commit = !git add -A && git commit
	s = status
	b = branch
	l = log -8

[merge]
  tool = nvimdiff

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"

[log]
	decorate=auto
	abbrevCommit=true

[format]
	pretty=oneline
